

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
    <div class="row">
      <div class="col-sm-12">
        <ol class="breadcrumb">
          <li><a href="/">Home</a></li>
          <li><a href="/users">Users</a></li>
          <li><a href="/users/new"> Add New</a></li>
        </ol>
      </div>
    </div>
    <h2 style="margin-left: 50px;">Edit &nbsp; <i class="fa fa-pencil" aria-hidden="true"></i></h2>

    <div class="well " style="width:800px;margin-left:30px;">
      <div class="form-group">
        <label class="col-md-7" for="email">Email </label>
        <div class="col-md-8">
          <%= f.email_field :email, :class => "form-control ", :id => "email", :placeholder => "Enter Your Email"  %>
        </div>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %>7
          </div>
      <% end %>


      <div class="form-group">
        <label class="col-md-7" for="email">password </label>
        <div class="col-md-8">
        <%= f.password_field :password,:class => "form-control ", :id => "password", :placeholder => "Enter Your Password"  %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-10" for="email">password Confirmation </label>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, :class => "form-control ", :id => "password_confirmation", :placeholder => "Enter Your Password again"  %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-10" for="email">Current Password </label>
        <div class="col-md-7">
        <%= f.password_field :current_password, :class => "form-control ", :id => "current_password", :placeholder => "Enter Your  Current Password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    </div>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
