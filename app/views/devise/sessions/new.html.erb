
<h2 style="margin-left:350px;">Log in <i class="fa fa-sign-in " aria-hidden="true"></i></h2>
<br>
<center>
  <%= form_for(resource, as: resource_name, :html => {:class => "form-horizontal"},url: session_path(resource_name)) do |f| %>

    <div class="well " style="width: 600px;">
    <div class="form-group">
      <label class="control-label col-md-3" for="email">Email </label>

      <div class="col-md-5">
      <%= f.email_field :email,:class => "form-control ", :id => "email", :placeholder => "Enter Your Email"  %>
    </div>
      </div>

      <div class="form-group">
      <label class="control-label col-md-3" for="password">Password</label>
        <div class="col-md-5">
      <%= f.password_field :password, :class => "form-control", :id =>"password", :placeholder => "Enter Your Password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
            <div class="form-group" >
              <div class="col-md-7">
            <%= f.check_box :remember_me , :id => "rememberme"  %>
                <div >
                <label style="margin-left: 90px;" for="rememberme">Remember me</label>
                </div>
              </div>
          </div>
  <% end %>
        <div class="form-group">
      <div class="actions">
        <div class="control label col-md-8">
    <%= f.submit "Log in", :class => "btn btn-primary " %>
        </div>
      </div>
        </div>
    </div>
  <% end %>

</center>