<%= form_for @customer, :html => {:class => "form-horizontal"} do |f| %>
    <div class="row">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/customers">Customer</a></li>
        <li><a href="/customers/new">New</a></li>
      </ol>
    </div>
    <div class="well " style="width: 500px;margin-left: 15px;">
      <div class="form-group">
        <label class="control-label col-md-4" for="name">Name</label>
        <div class="col-md-6">
          <%= f.text_field :name,:class => "form-control ", :id => "Name", :placeholder => "Enter Customer Name"  %>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-md-4" for="address">Address</label>
        <div class="col-md-6">
          <%= f.text_field :address, :class => "form-control ",  :placeholder => "Enter Address" %>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-md-4" for="phone_number">Phone Number</label>
        <div class="col-md-6">
          <%= f.text_field :phone_number, :class => "form-control ",  :placeholder => "Enter Phone Number" %>
        </div>
      </div>
      <div class="form-group">
        <div class="actions">
          <div class="control label col-md-10">
            <%= f.submit "Add", :class => "btn btn-primary " %>
          </div>
        </div>
      </div>
    </div>

<% end %>

