<div class="row">
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li> <a href="/suppliers">Supplier</a></li>
    <li><a href="">Show</a>
  </ol>
</div>
<div class="well" style="width: 500px;margin-left:15px;">
  <div class="form-horizontal">

    <div class="form-group">
      <div class="col-md-4">
        Name:
      </div>
      <div class="col-md-2">
        <%= @supplier.name %>
      </div>
    </div>
    <div class="form-group ">
      <div class="col-md-4">
        Address:
      </div>
      <div class="col-md-2">
        <%= @supplier.address %>
      </div>
    </div>

    <div class="form-group ">
      <div class="col-md-4">
        Phone No:
      </div>
      <div class="col-md-2">
        <%= @supplier.phone_number%>
      </div>
    </div>

    <div class="form-group ">
      <div class="col-md-4">
        E-mail:
      </div>
      <div class="col-md-2">
        <%= @supplier.email%>
      </div>
    </div>
  </div>
</div>
