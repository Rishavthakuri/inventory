
<div class="row">
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/suppliers">Supplier</a></li>
  </ol>
</div>
<div class="row">
  <div class="col-md-offset-9">
    <a  href="/suppliers/new"> <button type="submit" class="btn btn-primary btn-md"><i class="fa fa-plus" aria-hidden="true"></i> New</button></a>
  </div>
  <br>
  <div class="col-sm-10" style="margin-left: 15px;">
    <table class="table ">
      <tr style="background-color: #ebccd1;">
        <th> S.N</th>
        <th> Name</th>
        <th> Address</th>
        <th>Phone no</th>
        <th> E-mail</th>

        <th>Actions</th>
      </tr>
      <% @supplier.each_with_index do |supplier,i| %>
          <tr>
            <td> <%= (@page.to_i - 1)*5+i+1 %> </td>
            <td>     <%= supplier.name%></td>
            <td>    <%= supplier.address%> </td>
            <td>     <%= supplier.phone_number %> </td>
            <td>   <%= supplier.email %></td>

            <td class="col-md-3">
              <a  data-toggle="tooltip" data-placement="left" title="View" href="<%= supplier_path(supplier)%>">

                <i class="fa fa-eye fa-lg" aria-hidden="true"></i>
                </span>
              </a>
              &nbsp  &nbsp<a data-toggle="tooltip" data-placement="top" title="Edit" href="<%= edit_supplier_path(supplier)%>">
                  <span>
                    <i class="fa fa-pencil-square fa-lg" aria-hidden="true"></i>
                  </span>
            </a>
              &nbsp  &nbsp <a data-confirm="Are you sure to delete"  rel="nofollow" data-method="delete" data-toggle="tooltip" data-placement="right" title="Delete" href="<%= supplier_path(supplier)%>">
              <span >
                <i class="fa fa-trash fa-lg "></i>
              </span>
            </a>
            </td>
          </tr>

      <% end %>
    </table>
    <%= will_paginate @supplier, renderer:BootstrapPagination:: Rails %>
  </div>
</div>
</div>
<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>