<%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
    <div class="row">
      <div class="col-sm-12">
        <ol class="breadcrumb">
          <li><a href="/">Home</a></li>
          <li><a href="/users/edit">Users</a></li>
          <li><a href="/users/new"> Add New</a></li>
        </ol>
      </div>
    </div>
    <div class="well " style="width: 500px;margin-left:30px;">
      <div class="form-group">
        <label class="control-label col-md-5" for="email">Email </label>
        <div class="col-md-6">
          <%= f.email_field :email,:class => "form-control ", :id => "email", :placeholder => "Enter Your Email"  %>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-md-5" for="password">Password</label>
        <div class="col-md-6">
          <%= f.password_field :password, :class => "form-control", :id =>"password", :placeholder => "Enter Your Password" %>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-md-5" for="password">Confirm-Password</label>
        <div class="col-md-6">
          <%= f.password_field :password_confirmation, :class => "form-control", :id =>"confirm_password", :placeholder => "Enter Your Password again" %>
        </div>
      </div>

      <div class="form-group">
        <div class="actions">
          <div class="control label col-md-12">
            <%= f.submit "Add", :class => "btn btn-primary " %>
          </div>
        </div>
      </div>
    </div>
<% end %>