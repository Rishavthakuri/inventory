<div class="row">
      <div class="col-sm-12">
        <ol class="breadcrumb">
          <li><a href="/">Home</a></li>
          <li><a href="/users">Users</a></li>
          <li><a href="/users/new">New</a></li>
        </ol>
    </div>
    <div class="col-md-offset-9">
      <a  href="create"> <button type="submit" class="btn btn-primary btn-md"><i class="fa fa-plus" aria-hidden="true"></i> New</button></a>
    </div>
    <br>
    <div class="col-sm-10" style="margin-left:35px;">
      <table class="table ">
        <tr style="background-color: #ebccd1;">
          <th> S.N</th>
          <th> Email</th>
          <th>Created at</th>
          <th>Actions</th>
        </tr>
        <% @users.each_with_index do |user,i| %>
            <tr>
              <td> <%= (@page.to_i - 1)*5+i+1 %> </td>
              <td>     <%= user.email %></td>
              <td>    <%=user.created_at %> </td>
              <td class="col-md-3">

                &nbsp  &nbsp<a data-toggle="tooltip" data-placement="left" title="Edit" href="<%= edit_user_registration_path%>">
                  <span>
                    <i class="fa fa-pencil-square fa-lg" aria-hidden="true"></i>
                  </span>
              </a>
                &nbsp  &nbsp
                <a data-confirm="Are you sure to delete" rel="nofollow" data-method="delete" data-toggle="tooltip" data-placement="right" title="Delete"  href="<%= user_path(user)%>">
              <span >
                <i class="fa fa-trash fa-lg"></i>
              </span>
              </a>
              </td>
            </tr>

        <% end %>
      </table>
      <%= will_paginate @users, renderer:BootstrapPagination:: Rails %>
    </div>
  </div>
</div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
 </script>
