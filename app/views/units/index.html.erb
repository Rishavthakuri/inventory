
    <div class="row">
        <ol class="breadcrumb">
          <li><a href="/">Home</a></li>
          <li><a href="/units">Units</a></li>
        </ol>
    </div>
    <div class="col-md-offset-9">
      <a  href="/units/new"> <button type="submit" class="btn btn-primary btn-md"><i class="fa fa-plus" aria-hidden="true"></i> New</button></a>
    </div>
    <br>
    <div class="col-sm-10">
      <table class="table ">

        <tr style="background-color: #ebccd1;">
          <th> S.N</th>
          <th> Unit Name</th>
          <th>Print Name</th>
          <th>Actions</th>
        </tr>
        <% @unit.each_with_index do |unit,i| %>
            <tr>
              <td> <%= (@page.to_i - 1)*5+i+1 %> </td>
              <td>     <%= unit.name%></td>
              <td>    <%=unit.print_name%> </td>
              <td class="col-md-3">
                <a  data-toggle="tooltip" data-placement="left" title="View" href="<%= unit_path(unit)%>">

                  <i class="fa fa-eye fa-lg" aria-hidden="true"></i>
                  </span>
                </a>
                &nbsp  &nbsp<a data-toggle="tooltip" data-placement="top" title="Edit" href="<%= edit_unit_path(unit)%>">
                  <span>
                    <i class="fa fa-pencil-square fa-lg" aria-hidden="true"></i>
                  </span>
              </a>
                &nbsp  &nbsp
                <a data-confirm="Are you sure to delete" rel="nofollow" data-method="delete" data-toggle="tooltip" data-placement="left" title="Delete"  href="<%= unit_path(unit)%>">
              <span >
                <i class="fa fa-trash fa-lg"></i>
              </span>
                </a>
              </td>
            </tr>

        <% end %>
      </table>
      <%= will_paginate @unit, renderer:BootstrapPagination:: Rails %>
    </div>
  </div>
</div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>