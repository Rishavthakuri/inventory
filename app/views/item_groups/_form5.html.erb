<%= form_for @item_group, :html => {:class => "form-horizontal"} do |f| %>
    <div class="row">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li> <a href="/item_groups">Item Group</a></li>
        <li><a href="/item_groups/new">New</a></li>
      </ol>
    </div>

    <div class="well " style="width: 500px;margin-left: 15px;">
      <div class="form-group">
        <label class="control-label col-md-4" for="name">Name</label>
        <div class="col-md-6">
          <%= f.text_field :name,:class => "form-control ", :id => "Name", :placeholder => "Enter Name"  %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-4" for="unit_id">Parent ID</label>
        <div class="col-md-6">
          <%= f.collection_select :parent_id, ItemGroup.order(:name),:id , :name,{prompt:"Select  Parent"}, {class: "form-control"} %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-4" for="unit_id">Description</label>
        <div class="col-md-6">
          <%= f.text_area :description,:class => "form-control", :id =>"item_code", :placeholder => "Enter Item Code" %>
        </div>
        <div class="form-group">
          <div class="actions">
            <div class="control label col-md-10">
              <%= f.submit "Add", :class => "btn btn-primary " %>
            </div>
          </div>
        </div>
        </div>
    </div>

<% end %>

<script>

  $('#datepicker').datepicker({
    format: "yyyy/mm/dd",
  }).on('changeDate', function(e){
    $(this).datepicker('hide');

  });
</script>