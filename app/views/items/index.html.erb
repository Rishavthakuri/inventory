
  <div class="row">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/items">Items</a></li>
      </ol>
  </div>
  <div class="row">
    <div class="col-md-offset-9">
      <a  href="/items/new"> <button type="submit" class="btn btn-primary btn-md"><i class="fa fa-plus" aria-hidden="true"></i> New</button></a>
    </div>
    <br>
    <div class="col-sm-10" style="margin-left: 15px;">
      <table class="table ">
        <tr style="background-color: #ebccd1;">
          <th> S.N</th>
          <th> Item Name</th>
          <th>Unit ID</th>
          <th>Item Code</th>
          <th>Actions</th>
        </tr>
        <% @item.each_with_index do |item,i| %>
            <tr>
              <td> <%= (@page.to_i - 1)*5+i+1 %> </td>
              <td>     <%= item.name%></td>
              <td>    <%=item.unit_id%> </td>
              <td>     <%= item.item_code %> </td>

              <td class="col-md-3">
                <a  data-toggle="tooltip" data-placement="left" title="View" href="<%= item_path(item)%>">

                  <i class="fa fa-eye fa-lg" aria-hidden="true"></i>
                  </span>
                </a>
                &nbsp  &nbsp<a data-toggle="tooltip" data-placement="top" title="Edit" href="<%= edit_item_path(item)%>">
                  <span>
                    <i class="fa fa-pencil-square fa-lg" aria-hidden="true"></i>
                  </span>
              </a>
                &nbsp  &nbsp <a data-confirm="Are you sure to delete"  rel="nofollow" data-method="delete" data-toggle="tooltip" data-placement="right" title="Delete" href="<%= item_path(item)%>">
              <span >
                <i class="fa fa-trash fa-lg "></i>
              </span>
                </a>
              </td>
            </tr>

        <% end %>
      </table>
      <%= will_paginate @item, renderer:BootstrapPagination:: Rails %>
    </div>
  </div>
</div>
<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>