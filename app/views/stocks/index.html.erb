
<div class="row">
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/stocks">Stock</a></li>
  </ol>
</div>

<div class="row">
  <div class="col-sm-10" style="margin-left: 15px;">
    <table class="table ">
      <tr style="background-color: #ebccd1;">
        <th> S.N</th>
        <th> Item Name </th>
        <th>Item Code</th>
        <th>Item Group</th>
        <th> Quantity</th>
        <th>Unit Price</th>
        <th>Est. selling Price</th>
        <th>Actions</th>
      </tr>
      <% @stock.each_with_index do |stock,i| %>
          <tr>
            <td> <%= (@page.to_i - 1)*5+i+1 %> </td>
            <td>     <%= stock.item.name%></td>
            <td>     <%= stock.item.item_code%></td>
            <td>     <%= stock.item.item_group.name%> </td>
            <td>     <%=stock.quantity%> </td>
            <td>     <%= stock.unit_price %> </td>
            <td>     <%= stock.est_sell_price%></td>
            <td class="col-md-3">
              <a  data-toggle="tooltip" data-placement="left" title="View" href="<%= stock_path(stock)%>">
                <i class="fa fa-eye fa-lg" aria-hidden="true"></i>
              </a>
            </td>
          </tr>

      <% end %>
    </table>
    <%= will_paginate @stock, renderer:BootstrapPagination:: Rails %>
  </div>
</div>
<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>